{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "astai",
    "version": "0.0.0" 
  },
  "tauri": {

    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/5-23/astai/releases/download/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgzNkZFN0IxQ0JCOUMyQjcKUldTM3dybkxzZWR2ZzRNWWJTWVF3SEw0NVZ5cWt1N0hMaXRQOWZaSG9NdzJ5MjRNU1JFeWxNNXIK",
      "windows": {
        "installMode": "passive"
      }
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "astai",
        "width": 800,
        "height": 600,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "f.5-23.dev",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    }
  }
}